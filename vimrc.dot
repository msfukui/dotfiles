"========================================
" .vimrc
" author: m.fukui
"========================================

set nocompatible

"----------------------------------------
" 各種プラグイン設定
"----------------------------------------

source ~/.vim/.vim.plugin

"----------------------------------------
" システム共通設定
"----------------------------------------

source ~/.vim/.vim.common

"----------------------------------------
" シンタックス・ハイライト設定
"----------------------------------------

if has('mac')
  source ~/.vim/.vim.syntax.mac
else
  source ~/.vim/.vim.syntax
endif

"----------------------------------------
" 一時設定
"----------------------------------------
